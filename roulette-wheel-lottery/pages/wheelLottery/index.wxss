.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 40rpx;
  }
  
  .wheel-container {
    position: relative;
    width: 650rpx;
    height: 650rpx;
    margin-bottom: 60rpx;
  }
  
  .wheel-canvas {
    width: 100%;
    height: 100%;
  }
  
  .pointer {
    position: absolute;
    top: -20rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 0;
    border-left: 20rpx solid transparent;
    border-right: 20rpx solid transparent;
    border-top: 40rpx solid #f44336;
    z-index: 10;
  }
  
  .start-btn {
    background-color: #4CAF50;
    color: white;
    padding: 20rpx 40rpx;
    border: none;
    border-radius: 10rpx;
    font-size: 32rpx;
    box-shadow: 0 4rpx 6rpx rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
  }
  
  .start-btn:active {
    transform: translateY(2rpx);
    box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  }